    <script type="text/javascript">
    //NAVBAR ANIMATION utilizes Scrollr.js
    $(function () {
        // initialize skrollr if the window width is large enough
        if ($(window).width() > 1024) {
            var s=skrollr.init();

            $(window).on('resize', function () {
                 if ($(window).width() > 1024) {
                         var s=skrollr.init();
                 } else if ($(window).width() <= 1024) {
                    skrollr.init().destroy();
                 }
            });         
        } else {
            skrollr.init().destroy();
        }
    });

    $(window).on('resize', function () {
        document.getElementById("navbarmobile").style.display = "none";
    });
    
    // Mobile navbar displaying
    $("#menuicon").click(function(){
        if ( $( "#navbarmobile" ).is( ":hidden" ) ) {
            $( "#navbarmobile" ).slideDown( 400 );
        } else {
            $( "#navbarmobile" ).hide();
        }
    }); 

    $("#mainwrapper").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";       
    }); 

    $("#wrapper").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";
                
    }); 

    $("#headerbg").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";
    }); 

$('.blog-list').load('/articles?category=reflections .inner-wrap');
           
    //Sticky Sidebar

    $(function() {
        moveScroller();
    });

    function moveScroller() {
        var move = function() {
            var st = $(window).scrollTop();
            var ot = $("#articles-scroller-anchor").offset().top;
            var s = $("#articles-scroller");
            if(st > ot) {
                s.css({
                    position: "fixed",
                    top: "100px"
                });
            } else {
                if(st <= ot) {
                    s.css({
                        position: "relative",
                        top: ""
                    });
                }
            }
        };
        $(window).scroll(move);
        move();
    } 
    
    //BOLDING
    $('.item-1').click(function() {
        $('.item-1').css('font-weight', '700');
        $('.item-2').css('font-weight', '400');
        $('.item-3').css('font-weight', '400');
