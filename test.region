    <script type="text/javascript">
   
    //NAVBAR ANIMATION utilizes Scrollr.js
    $(function () {
        // initialize skrollr if the window width is large enough
        if ($(window).width() > 1024) {
            var s=skrollr.init();

            $(window).on('resize', function () {
                 if ($(window).width() > 1024) {
                         var s=skrollr.init();
                 } else if ($(window).width() <= 1024) {
                    skrollr.init().destroy();
                 }
            });
            
        } else {
            skrollr.init().destroy();
        }
    });
    
    $(window).on('resize', function () {
        document.getElementById("navbarmobile").style.display = "none";
    });
    //navbar test to fix glitch
 //   $(function () {
 //     if ($(window).width() > 855) {
 //       document.getElementById("navbarmobile").style.display = "none";
 //     } else {};
 //   });


    //Displaying the mobile navbar
    $("#menuicon").click(function(){
        if ($( "#navbarmobile" ).is( ":hidden" ) ) {
            $( "#navbarmobile" ).slideDown( 400 );
        } else {
            $( "#navbarmobile" ).hide();
        }
    }); 
    
    $("#hero").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";               
    }); 

    $("#about-wrapper").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";
    }); 

    $("#headerbg").click(function(){    
        document.getElementById("navbarmobile").style.display = "none";      
    }); 
        
    //sticky sidebar

    $(function() {
        moveScroller();
    });
    

    function moveScroller() {
        var move = function() {
            var st = $(window).scrollTop();
            var ot = $("#scroller-anchor").offset().top;
            var s = $("#scroller");
            
            if(st > ot) {
                s.css({
                position: "fixed",
                top: "100px"
                });

            } else {
                if(st <= ot) {
                    s.css({
                        position: "relative",
                        top: ""
                    });
                }
            }
        };
    $(window).scroll(move);
    move();
    } 
    
    //Navbar Bolding & Smoothscroll using singlePageNav plugin
    $('#scroller').singlePageNav();

    </script>

